<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">

  <title>My blog</title>
</head>

<body>
  <%- include("partials/navbar.ejs") %>
  <div class="container">
    <div class="card mb-3" >
      <h5 class="card-header">Profile card</h5>
      <div class="row no-gutters">
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%- currentUser.name %></h5>
            <p class="card-text"><%- currentUser.email %></p>
            <p class="card-text"><small class="text-muted">Last time online: currently online</small></p>
          </div>
        </div>
      </div>
      <div class="row" style="margin: 4px auto 4px 2%">
        <a class="btn btn-primary" href="/edit_profile" role="button">Edit Profile</a>
      </div>
    </div>
  </div>
  <!-- JavaScript -->
  <script src="/jquery/jquery.min.js"></script>
  <script src="/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>